{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {}
  },
  "compilerOptions": {
    "target": "ESNext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist/types",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@root/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
